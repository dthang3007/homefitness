<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercise">

    <TextView
        android:id="@+id/exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/homefit_exercise"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/exercise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/exercise2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/report"
        android:layout_width="377dp"
        android:layout_height="529dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/exercise2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/abs_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/abs_exercise"></ImageView>

                <Button
                    android:id="@+id/abs_btn"
                    android:layout_width="196dp"
                    android:layout_height="58dp"
                    android:layout_alignBottom="@+id/abs_exercise"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="89dp"
                    android:layout_marginBottom="35dp"
                    android:text="@string/abs_btn"
                    android:visibility="visible">

                </Button>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/butt_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/butt_exercise" />

                <Button
                    android:id="@+id/butt_btn"
                    android:layout_width="196dp"
                    android:layout_height="58dp"
                    android:layout_alignBottom="@+id/butt_exercise"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="54dp"
                    android:layout_marginEnd="89dp"
                    android:layout_marginBottom="54dp"
                    android:text="@string/butt_btn"
                    android:visibility="visible">

                </Button>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/arm_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/arm_exercise" />

                <Button
                    android:id="@+id/arm_btn"
                    android:layout_width="196dp"
                    android:layout_height="58dp"
                    android:layout_alignBottom="@+id/arm_exercise"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"

                    android:layout_marginStart="92dp"
                    android:layout_marginTop="58dp"
                    android:layout_marginEnd="89dp"
                    android:layout_marginBottom="53dp"
                    android:text="@string/arm_btn"
                    android:visibility="visible">

                </Button>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/all_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/all_exercise" />

                <Button
                    android:id="@+id/all_btn"
                    android:layout_width="189dp"
                    android:layout_height="78dp"
                    android:layout_alignBottom="@+id/all_exercise"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="54dp"
                    android:layout_marginEnd="89dp"
                    android:layout_marginBottom="54dp"
                    android:text="@string/leg_btn"
                    android:visibility="visible">

                </Button>
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>